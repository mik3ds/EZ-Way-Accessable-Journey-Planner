<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main1ActivityEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/backdrop"
        android:orientation="vertical">
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="79dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Name:" />

    <EditText
        android:id="@+id/editProfName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal"
        android:text="Name" />



        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="175dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="79dp"
                android:layout_height="40dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="10dp"
                android:text="Gender:" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/gendergirl"
                android:button="@null"/>

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/genderboy"
                android:paddingLeft="50dp"
                android:button="@null"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/toggleTrackingRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="320dp"
            >

            <RadioButton
                android:id="@+id/toggleOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tracking on"/>

            <RadioButton
                android:id="@+id/toggleOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tracking off"/>


        </RadioGroup>

        <Button
            android:id="@+id/saveprofilebutton"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="375dp"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="Save Changes"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trackingEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:layout_marginTop="280dp"
            android:layout_gravity="center_horizontal"/>



    </android.support.v7.widget.CardView>


</RelativeLayout>